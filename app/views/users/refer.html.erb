                <a href="http://www.facebook.com/sharer/sharer.php?u=<%= CGI::escape(root_url) %>?ref=<%= CGI::escape(@user.referral_code) %>&title=FiresideProvisions" class="fb" target="_blank"><%=image_tag("facebook-icon.png", :class=> 'facebook')%></a>
